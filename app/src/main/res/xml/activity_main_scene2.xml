<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/text_hello"
               motion:framePosition="100"
               android:rotation="0" />
           <KeyAttribute
               motion:motionTarget="@+id/text_hello"
               motion:framePosition="20"
               android:rotation="-20" />
           <KeyAttribute
               motion:motionTarget="@+id/text_hello"
               motion:framePosition="40"
               android:rotation="20" />
           <KeyAttribute
               motion:motionTarget="@+id/text_hello"
               motion:framePosition="60"
               android:rotation="-15" />
           <KeyAttribute
               motion:motionTarget="@+id/text_hello"
               motion:framePosition="80"
               android:rotation="15" />
           <KeyAttribute
               motion:motionTarget="@+id/text_hello"
               motion:framePosition="90"
               android:rotation="0" />
       </KeyFrameSet>
    </Transition>
 <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
     motion:autoTransition="jumpToStart"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/text_hello"
               motion:framePosition="100"
               android:rotation="0" />
           <KeyAttribute
               motion:motionTarget="@+id/text_hello"
               motion:framePosition="20"
               android:rotation="-20" />
           <KeyAttribute
               motion:motionTarget="@+id/text_hello"
               motion:framePosition="40"
               android:rotation="20" />
           <KeyAttribute
               motion:motionTarget="@+id/text_hello"
               motion:framePosition="60"
               android:rotation="-15" />
           <KeyAttribute
               motion:motionTarget="@+id/text_hello"
               motion:framePosition="80"
               android:rotation="15" />
           <KeyAttribute
               motion:motionTarget="@+id/text_hello"
               motion:framePosition="90"
               android:rotation="0" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>