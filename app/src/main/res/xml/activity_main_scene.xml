<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="2000">
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/text_hello"
                motion:framePosition="0"
                android:rotation="0" />
            <KeyAttribute
                motion:motionTarget="@+id/text_hello"
                motion:framePosition="30"
                android:rotation="-20" />
            <KeyAttribute
                motion:motionTarget="@+id/text_hello"
                motion:framePosition="40"
                android:rotation="20" />
            <KeyAttribute
                motion:motionTarget="@+id/text_hello"
                motion:framePosition="70"
                android:rotation="-28" />
            <KeyAttribute
                motion:motionTarget="@+id/text_hello"
                motion:framePosition="90"
                android:rotation="0" />
            <KeyAttribute
                motion:motionTarget="@+id/text_hello"
                motion:framePosition="110"
                android:rotation="45" />
            <KeyAttribute
                motion:motionTarget="@+id/text_hello"
                motion:framePosition="120"
                android:rotation="45" />
            <KeyAttribute
                motion:motionTarget="@+id/text_hello"
                motion:framePosition="200"
                android:rotation="45" />
        </KeyFrameSet>
    </Transition> <Transition
    motion:constraintSetEnd="@+id/end"
    motion:constraintSetStart="@id/start"
    motion:autoTransition="jumpToStart"
    motion:duration="2000">
    <KeyFrameSet>
        <KeyAttribute
            motion:motionTarget="@+id/text_hello"
            motion:framePosition="0"
            android:rotation="0" />
        <KeyAttribute
            motion:motionTarget="@+id/text_hello"
            motion:framePosition="30"
            android:rotation="-20" />
        <KeyAttribute
            motion:motionTarget="@+id/text_hello"
            motion:framePosition="40"
            android:rotation="20" />
        <KeyAttribute
            motion:motionTarget="@+id/text_hello"
            motion:framePosition="70"
            android:rotation="-28" />
        <KeyAttribute
            motion:motionTarget="@+id/text_hello"
            motion:framePosition="90"
            android:rotation="0" />
        <KeyAttribute
            motion:motionTarget="@+id/text_hello"
            motion:framePosition="110"
            android:rotation="45" />
        <KeyAttribute
            motion:motionTarget="@+id/text_hello"
            motion:framePosition="120"
            android:rotation="45" />
        <KeyAttribute
            motion:motionTarget="@+id/text_hello"
            motion:framePosition="200"
            android:rotation="45" />
    </KeyFrameSet>
</Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>